<div class="container">
  <div id="sign_in" data-controller="display-signup">
    <div class="signin-container">
      <div class="sign_in_area  " data-display-signup-target="signInArea">
        <div class="sign_in_container">
          <div class="elements">
            <%= image_tag "football_icon.png", class: "icon", alt: "a football image" %>
            <div class="description">Greeting footballer</div>
            <div class="content">Please Sign in to your account</div>
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "google-button" do %>
              <div class="google_icon">
                <%= image_tag "google_icon.png", class: "google_icon", alt: "a google icon" %>
              </div>
              <div class="google_text">Sign in with Google</div>
            <% end %>
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "google-button" do %>
              <div class="google_icon">
                <%= image_tag "facebook_icon.png", class: "google_icon", alt: "a google icon" %>
              </div>
              <div class="google_text">Sign in with Facebook</div>
            <% end %>
          </div>
          <h1><span>or</span></h1>
          <div class="form">
            <div class="action">Sign in with Email</div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sign_in_form" }, data: { turbo: false }) do |f| %>
              <div class="field form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your Email" %>
              </div>

              <div class="field form-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your Password" %>
              </div>
              <div class="remember">
                <% if devise_mapping.rememberable? %>
                  <div class="field form-group">
                    <%= f.check_box :remember_me, class: "checkbox" %>
                    <%= f.label :remember_me, class: "checkbox" %>
                  </div>
                <% end %>
                <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <div class="field form-group">
                    <%= link_to "Forgot Password", new_password_path(resource_name), class: "forgot" %>
                  </div>
                <% end %>
              </div>

              <div class="actions">
                <%= f.submit "Log in", class: "btn" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
            <% if devise_mapping.registerable? && controller_name != 'registrations' %>
              <span class="sign_up">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), data: { action: "click->display-signup#toggleSignup" } %> </span> <br />
            <% end %>
          </div>
        </div>
      </div>

      <div class="sign_up_image d-none " data-display-signup-target="signUpImage">
        <%= image_tag "background_sign_up.jpg", class: "sign_in_image", alt: "sign up image showing a top view of field at night with people playing" %>
      </div>

      <div class="sign_in_image " data-display-signup-target="signInImage">
        <%= image_tag "background_sign_in.jpeg", class: "sign_in_image", alt: "sign up image showing a top view of field at night with people playing" %>
      </div>
      <div class="sign_up_area d-none" data-display-signup-target="signUpArea">
        <div class="sign_in_container">
          <div class="elements">
            <%= image_tag "football_icon.png", class: "icon", alt: "a football image" %>
            <div class="description">Join now and meet new friends</div>
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "google-button" do %>
              <div class="google_icon">
                <%= image_tag "google_icon.png", class: "google_icon", alt: "a google icon" %>
              </div>
              <div class="google_text">Sign up with Google</div>
            <% end %>
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: "false" }, class: "google-button" do %>
              <div class="google_icon">
                <%= image_tag "facebook_icon.png", class: "google_icon", alt: "a google icon" %>
              </div>
              <div class="google_text">Sign up with Facebook</div>
            <% end %>
          </div>
          <h1><span>or</span></h1>
          <div class="form">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "sign_in_form" }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field form-group">
                <%= f.label :email, class: "label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :password, class: "label" %>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="field form-group">
                <%= f.label :password_confirmation, class: "label" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Sign up", class: "btn" %>
              </div>
            <% end %>

            <span class="sign_up">Already have an account? <%= link_to "Log in", root_path(resource_name), data: { action: "click->display-signup#toggleSignup" } %></span><br />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
