<div class = "container">
  <div id="sign_in">
    <div class="signin-container">
      <div class="sign_in_area">
        <div class="sign_in_container">
          <div class="elements">
            <%= image_tag "football_icon.png", class:"icon", alt:"a football image"%>
            <div class="description">Greeting footballer</div>
            <div class="content">Please Sign in to your account</div>
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, :data => {turbo: "false"}, class: "google-button" do %>
              <div class="google_icon">
                <%= image_tag "google_icon.png", class:"google_icon", alt:"a google icon"%>
              </div>
              <div class="google_text">Sign in with Google</div>
            <% end %>
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, :data => {turbo: "false"}, class: "google-button" do %>
              <div class="google_icon">
                <%= image_tag "facebook_icon.png", class:"google_icon", alt:"a google icon"%>
              </div>
              <div class="google_text">Sign in with Facebook</div>
            <% end %>
          </div>
          <h1><span>or</span></h1>
          <div class="form">
            <div class="action">Sign in with Email</div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sign_in_form" }) do |f| %>
              <div class="field form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your Email" %>
              </div>

              <div class="field form-group">

                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your Password" %>
              </div>
              <div class="remember">
                <% if devise_mapping.rememberable? %>
                  <div class="field form-group">
                    <%= f.check_box :remember_me , class: "checkbox" %>
                    <%= f.label :remember_me, class: "checkbox" %>
                  </div>
                <% end %>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <div class="field form-group">
                  <%= link_to "Forgot Password", new_password_path(resource_name), class: "forgot" %>
                </div>
                <% end %>
              </div>


              <div class="actions">
                <%= f.submit "Log in", class: "btn" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

      <div class="sign_in_image">
        <%= image_tag "background_sign_in.jpeg", class:"sign_in_image", alt:"a sign in image"%>
      </div>
    </div>
  </div>
</div>
